                @Html.DisplayFor(modelItem => item.MeetID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationOfMeet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescriptionOfMeet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfMeet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsGoing)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", null, new { id = item.MeetID }, new { @class = "actionlinkstuff" }) |
                @Html.ActionLink("Details", "Details", null, new { id = item.MeetID }, new { @class = "actionlinkstuff" }) |
                @Html.ActionLink("Delete", "Delete", null, new { id = item.MeetID }, new { @class = "actionlinkstuff" })
            </td>
        </tr>
    }

</table>


<div id="outer1">
    <div class="button_slide1 slide_left1">
        @if (User.Identity.IsAuthenticated)
        {
            @Html.ActionLink("Cars", "Index", "Car", null, new { @class = "actionlinkstuff" })
        }
    </div>
    <div class="button_slide slide_left">
        @if (User.Identity.IsAuthenticated)
        {
            @Html.ActionLink("Members", "Index", "Member", null, new { @class = "actionlinkstuff" })
        }
    </div>
    <div class="button_slide slide_left">
        @if (User.Identity.IsAuthenticated)
        {
            @Html.ActionLink("Meets", "Index", "Meet", null, new { @class = "actionlinkstuff" })
        }
    </div>
    <div class="button_slide slide_left">
        @if (User.Identity.IsAuthenticated)
        {
            @Html.ActionLink("My Attendance", "Index", "Attendance", null, new { @class = "actionlinkstuff" })
        }
    </div>
</div>

@section scripts {
    <script language="javascript" type="text/javascript">
        $(document).ready(function () {
            $("i[data-toggle='star']")
                .css({ "cursor": "pointer" })
                .click(function (e) {
                    var target = $(e.target);
                    var noteId = target.attr("data-id");
                    var starSet = target.hasClass("glyphicon-star");

                    $.ajax({
                        method: starSet ? "DELETE" : "PUT",
                        url: "/api/note/" + noteId + "/star",
                        data: null
                    })
                        .done(function (r) {
                            target.removeClass();
                            target.addClass("glyphicon " + (starSet ? "glyphicon-star-empty" : "glyphicon-star"));
                        })
                        .fail(function (r) {
                            alert("Failed to change star status");
                        });
                });
        });</script>
}
