        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescriptionOfMeet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfMeet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsGoing)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
