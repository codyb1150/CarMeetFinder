@model IEnumerable<CarMeetFinder.Models.MeetModels.MeetListItem>

@{
    ViewBag.Title = "Index";
}

<link href="https://fonts.googleapis.com/css?family=Exo" rel="stylesheet">


<h2 id="indexHeader">Meets</h2>

<p>
    @Html.ActionLink("Click To Add A Meet", "Create", null, new { @class = "createnew" })
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
